<html>
    <head>
        <title>Similar Author Identification</title>
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" />
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap-theme.min.css" />
        <link rel="stylesheet" href="http://getbootstrap.com/examples/starter-template/starter-template.css" />

        <style type="text/css">
            body {
                text-align: center;
                overflow: hidden;
            }
            .blog-post-content {
                margin: 80;
            }
            #run-button {
                float: right;
                width: 100;
            }
            .result-content {
                text-align: center;
                background-color: rgb(12, 144, 136);
                margin-left: 350px;
                margin-right: 305px;
                padding: 20px;
                color: white;
                border: 2px solid;
                border-radius: 25px;
                clear: left;
                position: relative;
            }
            .cluster-label-div {
                clear: both;
                text-align: left;
                margin-left: 25%;
            }
            #cluster_view {
                margin-right: 80;
                float: right;
            }

        </style>

    </head>

    <body>

    <a href="/clusters" id="cluster_view">View all clusters</a>

    <h1>Similar Author Identification</h1>

    <div class="blog-post-content">
        <form class="form-horizontal" role="form" id='blog-post-form' method='post' action='/'>
            <div class="form-group">
                <h4 class="control-label" style="float: left">Blog Post (in German)</h4>
                <br/><br/>
                <div>
                    <textarea class="form-control" cols="20" rows="20" id="blog-post" name='blog-post' placeholder="Enter a blog post..." required="required">{{blog-post}}</textarea>
                </div>
            </div>
        </form>

        <input type='submit' value='Run' class="btn btn-primary" id="run-button" form='blog-post-form' />
    </div>

    {{#result}}
        <hr/>

        <div class="result-content">
            <h2>Result</h2>
            <br/>
            The blog post belongs to
            <br/><br/>
            {{#svm}}
                <h4><b>{{cluster-name}}</b></h4>
            {{/svm}}
            {{^svm}}
                <h4><b>Cluster {{cluster}}</b></h4>
                <br/>
                <div class="cluster-label-div">
                    Cluster
                    <ul>
                    {{#cluster-labels}}
                        <li>{{.}}
                    {{/cluster-labels}}
                    </ul>
                </div>
            {{/svm}}
        </div>
    {{/result}}

    </body>
</html>
